<%= form_with scope: :article, url: user_article_comments_path(current_user,@article), local: true  do |form| %>
  <div class="panel panel-success">
  <div class="form-group panel-heading">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" class="form-control" name="article[commenter]" id="article_commenter" aria-describedby="emailHelp" placeholder="Enter Name">
  </div>
  <div class="form-group panel-body">
    <label for="exampleInputEmail1">Comment</label>
    <input type="text" class="form-control" name="article[body]" id="article_body" aria-describedby="commentHelp" placeholder="Write Comment">
    <small id="commentHelp" class="form-text text-muted">Please be Positive.</small>
  </div>
  </div>
  <p>
    <%= form.submit 'Create Comment',class: "btn btn-success" %>
  </p>
<% end %>